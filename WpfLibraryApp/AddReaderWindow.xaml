<Window x:Class="WpfLibraryApp.AddReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLibraryApp"
        mc:Ignorable="d"
        Title="Add Reader" Height="450" Width="800">
    <Grid>
        <!-- Add controls for creating a new reader, e.g., TextBox for Name, etc. -->
        <TextBox x:Name="txtName" Margin="0,137,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="300" Height="30"/>

        <!-- OK and Cancel Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20">
            <Button Content="OK" Width="100" Height="30" Margin="5" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="100" Height="30" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
